# PickleJar Backend Environment Variables
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=PickleJar API
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# SQLite (Development/MVP)
DATABASE_URL=sqlite:///./picklejar.db

# PostgreSQL/Supabase (Production)
# DATABASE_URL=postgresql://user:password@host:5432/database
# Example for Supabase:
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# SMS/Phone Verification (Twilio - Optional)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Optional - for calendar invites)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@picklejar.app

# Session Configuration
SESSION_DURATION_HOURS=24

# PickleJar Defaults
DEFAULT_POINTS_PER_VOTER=10
DEFAULT_MAX_SUGGESTIONS=1
MAX_PICKLEJAR_DURATION_DAYS=7

# Rate Limiting (Future use)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
